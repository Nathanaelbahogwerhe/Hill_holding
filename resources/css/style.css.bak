/* resources/css/style.css - styles spécifiques login/overrides */

.login-card {
  max-width: 420px;
  width: 100%;
  background-color: var(--hh-card);
  border-radius: 15px;
  padding: 2rem;
  box-shadow: 0 8px 20px rgba(0,0,0,0.5);
  color: var(--hh-light);
}

.text-kc-light { color: var(--hh-light) !important; }

@media (max-width: 576px) {
  .login-card { padding: 1.25rem; margin: 1rem; }
}
